<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/avaterround"
        android:orientation="vertical"
        android:padding="15dp"
        android:weightSum="8">

        <TextView
            android:id="@+id/id_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundc"
            android:fontFamily="@font/alfa_slab_one"
            android:gravity="center"
            android:text="01"
            android:textSize="34sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundc"
            android:drawableLeft="@drawable/ic_name"
            android:gravity="center_horizontal|center_vertical"
            android:paddingStart="20dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/email_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundc"
            android:drawableLeft="@drawable/ic_email"
            android:gravity="center_horizontal|center_vertical"
            android:paddingStart="20dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/phone_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundc"
            android:drawableLeft="@drawable/ic_contact"
            android:gravity="center_horizontal|center_vertical"
            android:paddingStart="20dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/descr_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundc"
            android:drawableLeft="@drawable/ic_descripton"
            android:gravity="center_horizontal|center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/degree_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundc"
            android:drawableLeft="@drawable/ic_academic"
            android:gravity="center_horizontal|center_vertical"
            android:paddingStart="20dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/skill_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundc"
            android:drawableLeft="@drawable/ic_skill"
            android:gravity="center_horizontal|center_vertical"
            android:paddingStart="20dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/exper_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundc"
            android:drawableLeft="@drawable/ic_hand"
            android:gravity="center_horizontal|center_vertical"
            android:paddingStart="20dp"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>