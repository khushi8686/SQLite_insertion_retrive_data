<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="20dp"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-40dp">

    <Button
        android:id="@+id/retrive_data"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/backgroundc"
        android:text="View Data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exp" />

    <Button
        android:id="@+id/count_row"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/backgroundc"
        android:text="Rows"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exp" />

    <Button
        android:id="@+id/update"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="212dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/backgroundc"
        android:text="Update"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exp" />

    <Button
        android:id="@+id/submite"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="212dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/backgroundc"
        android:text="insert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exp" />

    <EditText
        android:id="@+id/exp"
        android:layout_width="222dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundebutton"
        android:drawableStart="@drawable/ic_hand"
        android:drawablePadding="0dp"
        android:ems="10"
        android:hint="@string/experience"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skills" />

    <EditText
        android:id="@+id/email"
        android:layout_width="222dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:autofillHints=""
        android:background="@drawable/roundebutton"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="0dp"
        android:ems="10"
        android:hint="Enter your Email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_txt" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="93dp"
        android:layout_height="84dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_resume" />

    <EditText
        android:id="@+id/name_txt"
        android:layout_width="222dp"
        android:layout_height="48dp"
        android:layout_marginTop="120dp"
        android:autofillHints=""
        android:background="@drawable/roundebutton"
        android:drawableLeft="@drawable/ic_name"
        android:ems="10"
        android:hint="@string/enter_your_name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/des"
        android:layout_width="222dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundebutton"
        android:drawableLeft="@drawable/ic_descripton"
        android:drawablePadding="0dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Description"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <EditText
        android:id="@+id/skills"
        android:layout_width="222dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundebutton"
        android:drawableLeft="@drawable/ic_skill"
        android:drawablePadding="0dp"
        android:ems="10"
        android:hint="Skills"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/degree" />

    <EditText
        android:id="@+id/number"
        android:layout_width="222dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundebutton"
        android:drawableLeft="@drawable/ic_contact"
        android:ems="10"
        android:hint="Enter your Phone"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <EditText
        android:id="@+id/degree"
        android:layout_width="222dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundebutton"
        android:drawableLeft="@drawable/ic_academic"
        android:drawablePadding="0dp"
        android:ems="10"
        android:hint="Final Degree"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/des" />

</androidx.constraintlayout.widget.ConstraintLayout>